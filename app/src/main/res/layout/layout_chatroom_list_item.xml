<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mChatRoomListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatroomPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_chatroom_photo"
        app:civ_border_color="@color/darkGrey"
        app:civ_border_width="0dp" />

    <ImageView
        android:id="@+id/chevron_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/click_to_open_messages"
        app:srcCompat="@drawable/ic_chevron_right" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/chatroomPhoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatroom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/helvetica_neue_med"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chatroom_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/helvetica_neue_light"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>